<%= form_for @survey do |s| %>
  <%= s.label :title %>
  <%= s.text_field :title %>
  <BR>
  <%= s.label :description %>
  <%= s.text_area :description %>
  <BR>
  <% @survey.questions.each do |question| %>
    <%= s.fields_for :questions, question do |q| %>
    <BR><BR>
    	<%= q.label :content %>
      <%= q.text_field :content, :class => "question" %>
      <BR>
      <% question.choices.each do |choice| %>
        <%= q.fields_for :choices, choice do |c| %>
          - Choice: <%= c.text_field :content, :class => "choice" %>
          <BR>
      	<% end %>	
      <% end %>
    <% end %>
  <% end %>
  <%= s.submit %>
<% end %>